$ORIGIN {{ reverse_zone }}.
$TTL 86400
@  IN  SOA  ns.{{ forward_zone }}.  hostmaster.{{ forward_zone }}. (
       2001062501  ; serial
       21600       ; refresh after 6 hours
       3600        ; retry after 1 hour
       604800      ; expire after 1 week
       86400 )     ; minimum TTL of 1 day
;
@  NS   ns.{{ forward_zone }}.
;
{{ dns_private_ip.split('.')[3] }} IN  PTR  ns.{{ forward_zone }}.
